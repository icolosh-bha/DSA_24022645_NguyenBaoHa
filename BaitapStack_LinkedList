#include <bits/stdc++.h>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node(int x) : data(x), next(NULL) {}
};

struct Stack {
    Node* head;
    int count;

    Stack() {
        head = NULL;
        count = 0;
    }

    bool isEmpty() {
        return head == NULL;
    }

    void push(int x) {
        Node* temp = new Node(x);
        temp->next = head;
        head = temp;
        count++;
    }

    int pop() {
        if (isEmpty()) {
            cout << "Stack rong!\n";
            return -999; 
        }
        Node* temp = head;
        int val = temp->data;
        head = head->next;
        delete temp;
        count--;
        return val;
    }

    int top() {
        if (isEmpty()) {
            cout << "Stack rong!\n";
            return -999;
        }
        return head->data;
    }

    int size() {
        return count;
    }
};

int main() {
    Stack st;
    st.push(10);
    st.push(20);
    st.push(30);

    cout << "Top: " << st.top() << endl;
    cout << "Size: " << st.size() << endl;

    cout << "Pop -> " << st.pop() << endl;
    cout << "Pop -> " << st.pop() << endl;

    cout << "Top sau pop: " << st.top() << endl;
    cout << "Size hien tai: " << st.size() << endl;

    return 0;
}
